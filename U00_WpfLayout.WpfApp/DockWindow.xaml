<Window x:Class="U00_WpfLayout.WpfApp.DockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U00_WpfLayout.WpfApp"
        mc:Ignorable="d"
        Title="DockWindow" Height="280" Width="280">
    <DockPanel>
        <Button Content="Top 1" DockPanel.Dock="Top"></Button>
        <Button Content="Bottom 1" DockPanel.Dock="Bottom"/>
        <Button Content="Bottom 2" DockPanel.Dock="Bottom"/>
        <Button Content="Left" DockPanel.Dock="Left"/>
        <Button Content="Right 1" DockPanel.Dock="Right"/>
        <Button Content="Top 2" DockPanel.Dock="Top"/>
        <Button Content="Right 2" DockPanel.Dock="Right"/>
        <Button Content="Center"/>
    </DockPanel>
</Window>
