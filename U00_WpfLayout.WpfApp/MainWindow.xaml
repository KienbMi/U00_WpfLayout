<Window x:Class="U00_WpfLayout.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U00_WpfLayout.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="StackPanel" Margin = "0, 10, 0, 10" x:Name="btnStackPanel"></Button>
        <Button Grid.Row="1" Content="Dock" Margin = "0, 10, 0, 10" x:Name="btnDock"></Button>
        <Button Grid.Row="2" Content="Grid" Margin = "0, 10, 0, 10" x:Name="btnGrid"></Button>
        <Button Grid.Row="3" Content="Grid Splitter" Margin = "0, 10, 0, 10" x:Name="btnGridSplitter"></Button>
    </Grid>
</Window>
